CREATE DATABASE MY_NEW_DATABASE;

CREATE TABLE EmployeeDemographics
(EmployeeID int, 
FirstName varchar(50), 
LastName varchar(50), 
Age int, 
Gender varchar(50)
)

CREATE TABLE EmployeeSalary
(EmployeeID int, 
JobTitle varchar(50), 
Salary int
)

